<section id="products" class="bg-gray-100 pb-20 pt-10 px-4 md:px-12">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-4xl font-bold text-center text-gray-800 mb-12">
        Drinks
      </h2>
  
      <div class="flex flex-wrap -mx-2">
        <% products.forEach((product) => { %>
          <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 p-2">
            <div
              class=" bg-gradient-to-r from-white to-gray-200 rounded-2xl shadow-xl hover:shadow-md transition-all duration-200 flex flex-col h-full"
            >
              <!-- Image -->
              <div
                class="bg-gray-100 h-48 flex items-center justify-center rounded-t-2xl overflow-hidden"
              >
                <img
                  src="/img/image-1.jpg"
                  alt="<%= product.title %>"
                  class="max-h-full max-w-full object-cover h-full w-full"
                />
              </div>
  
              <!-- Content -->
              <div class="p-4 flex flex-col justify-between flex-grow">
                <!-- Discount Badge -->
                <% if (product.discount) { %>
                <span
                  class="bg-blue-100 text-blue-600 text-xs px-2 py-1 rounded-full inline-block mb-2 w-fit"
                >
                  Up to <%= product.discount %> off
                </span>
                <% } %>
  
                <!-- Title -->
                <h3 class="font-semibold text-sm text-gray-800 line-clamp-2 mb-1">
                  <%= product.title %>
                </h3>
  
                <!-- Ratings -->
                <div class="flex items-center text-yellow-500 text-sm mb-1">
                  <span class="mr-1">★</span>
                  <span><%= product.rating %></span>
                  <span class="text-gray-500 ml-2">(<%= product.reviews %>)</span>
                </div>
  
                <!-- Features -->
                <div class="text-xs text-gray-500 mb-2">
                  <% if (product.features) { %>
                    <% product.features.forEach(feature => { %>
                      <span class="mr-2">• <%= feature %></span>
                    <% }) %>
                  <% } %>
                </div>
  
                <!-- Price and Button -->
                <div class="mt-auto flex items-center justify-between">
                  <div class="text-lg font-bold text-gray-800">
                    $<%= product.price %>
                  </div>
                  <button
                    class="bg-blue-600 text-white text-sm px-3 py-1 rounded-md hover:bg-blue-700 transition"
                  >
                    Add to cart
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
  