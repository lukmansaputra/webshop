<section
  id="products"
  class="bg-gray-100 pb-20 max-w-6xl mx-auto mt-5 px-4 md:px-12"
>
  <%- include("./components/breadcrumb") %>

  <div class="mt-2">
    <div class="flex flex-wrap justify-start -mx-2">
      <% products.forEach((product) => { %>
      <a
        href="/products/overview/<%= product.id %>"
        class="w-1/2 sm:w-1/3 md:w-1/3 lg:w-1/4 p-2"
      >
        <div
          class="bg-white rounded-2xl shadow-xl hover:shadow-md transition-all duration-200"
        >
          <!-- Gambar -->
          <div
            class="aspect-[4/3] bg-gray-100 rounded-t-2xl overflow-hidden relative"
          >
            <div class="bg-blue-600 absolute px-3 top-3 py-1 rounded-r-md">
              <span class="text-white">20% Off</span>
            </div>
            <img
              src="<%= product.images[0] %>"
              alt="<%= product.name %>"
              class="w-full h-full object-cover"
            />
          </div>

          <!-- Konten -->
          <div class="p-4">
            <h3
              class="font-semibold text-xs md:text-sm text-gray-800 line-clamp-2 mb-1"
            >
              <%= product.name %>
            </h3>
            <h4 class="font-bold">Rp. <%= product.price %></h4>
          </div>
        </div>
      </a>
      <% }) %>
    </div>
  </div>
</section>
