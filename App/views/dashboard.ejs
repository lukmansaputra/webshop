<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="h-min-screen flex">
      <%- include("./components/sidebar-dashboard") %>
      <%- include("./components/topbar-dashboard") %>

      <!-- Page content -->
      <section class="p-6">
        <h2 class="text-xl font-semibold mb-4">Overview</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-white p-4 rounded-lg shadow hover:shadow-md">
            <div class="text-sm text-gray-500">Products</div>
            <div class="text-2xl font-bold text-blue-600"><%= totalProducts %></div>
          </div>
          <div class="bg-white p-4 rounded-lg shadow hover:shadow-md">
            <div class="text-sm text-gray-500">Categories</div>
            <div class="text-2xl font-bold text-green-600"><%= totalCategories %></div>
          </div>
          <div class="bg-white p-4 rounded-lg shadow hover:shadow-md">
            <div class="text-sm text-gray-500">Orders</div>
            <div class="text-2xl font-bold text-yellow-600">56</div>
          </div>
          <div class="bg-white p-4 rounded-lg shadow hover:shadow-md">
            <div class="text-sm text-gray-500">Users</div>
            <div class="text-2xl font-bold text-purple-600">512</div>
          </div>
        </div>

        <!-- Additional section -->
        <div class="mt-10">
          <h3 class="text-lg font-semibold mb-2">Recent Orders</h3>
          <div class="overflow-x-auto bg-white rounded-lg shadow">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Order ID</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Customer</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-100">
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">#1001</td>
                  <td class="px-6 py-4 whitespace-nowrap">John Doe</td>
                  <td class="px-6 py-4 whitespace-nowrap">$99.99</td>
                  <td class="px-6 py-4 whitespace-nowrap text-green-600 font-medium">Completed</td>
                </tr>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">#1002</td>
                  <td class="px-6 py-4 whitespace-nowrap">Jane Smith</td>
                  <td class="px-6 py-4 whitespace-nowrap">$149.50</td>
                  <td class="px-6 py-4 whitespace-nowrap text-yellow-500 font-medium">Pending</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>
          <%- include("./components/bottombar-dashboard") %>

  </div>
</body>
</html>
