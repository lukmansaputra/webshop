
  <div class="md:px-0 max-w-6xl px-2 mx-auto pb-10">

      <%- include("../components/breadcrumb") %>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 lg:grid-cols-5 gap-2 max-w-7xl mx-auto">
        
        <!-- Product Card -->
         <% products.forEach(product => {%>
            
            <a href="/product/overview/<%= product.slug %>" class="bg-white dark:bg-slate-900 rounded-2xl shadow hover:shadow-lg transition cursor-pointer">
              <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="rounded-t-2xl w-full h-48 object-cover">
              <div class="p-3">
                <h3 class="text-xs md:text-sm font-semibold mb-1 line-clamp-2 min-h-[2rem] md:min-h-[2.75rem] dark:text-gray-100"><%= product.name %></h3>
                <p class="text-red-400 font-bold text-base mb-1">Rp<%= product.price %></p>
                <p class="text-xs text-gray-600 dark:text-gray-100">⭐ 4.6 • 750+ terjual</p>
                <p class="text-xs text-gray-500  dark:text-gray-100 mb-1">CV Berkah Jaya</p>
                <span class="inline-block text-[10px] bg-green-100 text-green-700 px-2 py-0.5 rounded-full">New Product</span>
              </div>
            </a>
         <%}); %>
        
  </div>